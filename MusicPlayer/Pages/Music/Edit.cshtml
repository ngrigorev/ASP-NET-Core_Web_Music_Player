            <div class="form-group">
                <label asp-for="Music.Name" class="control-label"></label>
                <input asp-for="Music.Name" class="form-control" />
                <span asp-validation-for="Music.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.Path" class="control-label"></label>
                <input asp-for="Music.Path" class="form-control" />
                <span asp-validation-for="Music.Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.Author" class="control-label"></label>
                <input asp-for="Music.Author" class="form-control" />
                <span asp-validation-for="Music.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.Playlist_Id" class="control-label"></label>
                <input asp-for="Music.Playlist_Id" class="form-control" />
                <span asp-validation-for="Music.Playlist_Id" class="text-danger"></span>
